<div class="formss">
    <div id="wrapper">
      <div id="box">
        <div class="header">
            <h4>Forgot your password?</h4>
        </div>
          <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:autocomplete => "on"} , :html => { :method => :post }) do |f| %>
            <%= devise_error_messages! %>

            
              <h6>EMAIL</h6>
              <%= f.email_field :email, class: "form-control Fname" %>
            

            
              <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
            
          <% end %>
        
       </div>
    </div> 
</div>

