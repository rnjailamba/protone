

  

<div class="SignUp">
   <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:autocomplete => "on"}) do |f| %>
      <%= f.error_notification %>


       <h1>Sign Up</h1>
       <h4 class="center"> Already have an account? <a href="/users/sign_in" ><font color="#4aa3df">Log in</font></a></h4>
       <hr>

        <%= f.input :email %>

        <%= f.input :password  %>
        <%= f.error :base %>
      
        <button type="submit">Sign Up</button>
     
    <% end %>


  
</div>

