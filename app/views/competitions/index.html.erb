<div id="comp" class="row">

    <% @competitions.each do |competition| %>
      <div class="masonry-item ">
        <div class="panel-body">
          <%= competition.name %>
          <%= competition.user.email if competition.user%><br/>
          <%= competition.description %><br/>
          <%= competition.category %><br/>
          <%= competition.collegename %><br/>
          <%= competition.money %><br/>
          <%= link_to 'Show', competition %>

          <% if competition.user == current_user %>
            <div class="actions">
              <%= link_to 'Edit', edit_competition_path(competition) %>
              <%= link_to 'Destroy', competition, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          <% end %>
        </div>
      </div>


    <% end %>
</div>
  
<div class="center">
   <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>
