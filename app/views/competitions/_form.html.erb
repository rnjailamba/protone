
<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Create a competition</h1>
  </div>

   <div class="panel-body">
    <%= simple_form_for(@competition) do |f| %>
      <% if @competition.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@competition.errors.count, "error") %> prohibited this competition from being saved:</h2>

          <ul>
          <% @competition.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
            <%= f.label :name %>
            <%= f.email_field :name, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :collegename %>
        <%= f.text_field :collegename, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :money %>
        <%= f.number_field :money, class: "form-control" %>
      </div>



      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

